---
import Layout from '../../layouts/Layout.astro';
import { buildLocalizedURL } from '../../lib/i18n/utils';

const sections = [
  {
    title: "Información que Recopilamos",
    content: [
      "Información de contacto (nombre, correo electrónico, número de teléfono)",
      "Detalles del evento (fecha, ubicación, número de invitados)",
      "Preferencias de bebidas y requisitos de servicio",
      "Información de pago para procesamiento",
      "Historial de comunicación y retroalimentación del servicio"
    ]
  },
  {
    title: "Cómo Utilizamos su Información",
    content: [
      "Para procesar y confirmar su reserva",
      "Para personalizar nuestros servicios según sus preferencias",
      "Para comunicarnos sobre los detalles de su evento",
      "Para enviar cotizaciones y facturas",
      "Para mejorar nuestros servicios y experiencia del cliente"
    ]
  },
  {
    title: "Seguridad de la Información",
    content: [
      "Implementamos medidas de seguridad para proteger sus datos",
      "La información de pago se procesa a través de plataformas seguras",
      "No compartimos sus datos con terceros no autorizados",
      "Su información se conserva solo el tiempo necesario",
      "Puede solicitar la eliminación de sus datos en cualquier momento"
    ]
  },
  {
    title: "Comunicaciones",
    content: [
      "Podemos enviar correos electrónicos y actualizaciones relacionadas con eventos",
      "Puede optar por recibir nuestro boletín informativo",
      "Puede darse de baja de las comunicaciones en cualquier momento",
      "No enviamos spam ni publicidad no solicitada"
    ]
  }
];

const title = "Política de Privacidad";
const description = "Política de privacidad para los servicios de Dito's Bartender";
const canonicalURL = "https://ditos-bartender.vercel.app/es/privacidad";

// URLs alternativas para esta página
const siteUrl = Astro.site ? Astro.site.toString() : Astro.url.origin;
const alternateUrls = {
  en: buildLocalizedURL(siteUrl, 'en', '/privacy').toString(),
  es: buildLocalizedURL(siteUrl, 'es', '/privacidad').toString(),
};
---

<Layout 
  title={title} 
  description={description}
  canonicalURL={canonicalURL}
  alternateUrls={alternateUrls}
>
  <section class="pt-32 pb-20">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold text-gray-800 mb-8">Política de Privacidad</h1>
      <p class="text-gray-600 mb-12">
        Última actualización: {new Date().toLocaleDateString('es-ES')}
      </p>

      <div class="space-y-12">
        {sections.map(section => (
          <div>
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">
              {section.title}
            </h2>
            <ul class="space-y-3">
              {section.content.map(item => (
                <li class="text-gray-600">{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout> 
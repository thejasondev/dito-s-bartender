---
import Layout from '../layouts/Layout.astro';

const sections = [
  {
    title: "Information We Collect",
    content: [
      "Contact information (name, email, phone number)",
      "Event details (date, location, guest count)",
      "Beverage preferences and service requirements",
      "Payment information for processing",
      "Communication history and service feedback"
    ]
  },
  {
    title: "How We Use Your Information",
    content: [
      "To process and confirm your booking",
      "To customize our services to your preferences",
      "To communicate about your event details",
      "To send quotes and invoices",
      "To improve our services and customer experience"
    ]
  },
  {
    title: "Information Security",
    content: [
      "We implement security measures to protect your data",
      "Payment information is processed through secure platforms",
      "We do not share your data with unauthorized third parties",
      "Your information is retained only as long as necessary",
      "You can request deletion of your data at any time"
    ]
  },
  {
    title: "Communications",
    content: [
      "We may send event-related emails and updates",
      "You can opt-in to receive our newsletter",
      "You can unsubscribe from communications at any time",
      "We do not send spam or unsolicited advertisements"
    ]
  }
];
---

<Layout title="Privacy Policy" description="Privacy policy for Dito's Bartender services">
  <section class="pt-32 pb-20">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold text-gray-800 mb-8">Privacy Policy</h1>
      <p class="text-gray-600 mb-12">
        Last updated: {new Date().toLocaleDateString()}
      </p>

      <div class="space-y-12">
        {sections.map(section => (
          <div>
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">
              {section.title}
            </h2>
            <ul class="space-y-3">
              {section.content.map(item => (
                <li class="text-gray-600">{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

const suggestions = [
  { text: "Return Home", link: "/" },
  { text: "View Our Services", link: "/services" },
  { text: "Contact Us", link: "/contact" },
];

const title = "404 - Page Not Found";
const description = "Sorry, we couldn't find the page you're looking for. Return to Dito's Bartender for professional bartending services.";
const canonicalURL = "https://ditos-bartender.vercel.app/404";
---

<Layout 
  title={title} 
  description={description}
  canonicalURL={canonicalURL}
>

  <section class="min-h-screen flex items-center justify-center py-20 bg-gradient-to-b from-primary to-secondary">
    <div class="container px-4 mx-auto text-center">
      <div class="mb-8 animate-bounce">
        <Icon name="mdi:glass-cocktail-off" class="w-24 h-24 mx-auto text-accent" />
      </div>
      
      <h1 class="text-6xl md:text-8xl font-bold text-white mb-8">
        4<span class="text-accent">0</span>4
      </h1>
      
      <h2 class="text-2xl md:text-3xl font-semibold text-white mb-4">
        Oops! Looks like this drink got spilled
      </h2>
      
      <p class="text-xl text-white/80 mb-12 max-w-2xl mx-auto">
        Don't worry, our bartenders are mixing up something special. 
        Meanwhile, why don't you try one of these perfectly crafted routes?
      </p>
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        {suggestions.map(({ text, link }) => (
          <a
            href={link}
            class="px-8 py-3 bg-accent hover:bg-accent/90 text-white rounded-full 
                   font-semibold transition-colors duration-300 flex items-center gap-2"
            aria-label={text}
          >
            {text === "Return Home" && <Icon name="mdi:home" class="w-5 h-5" />}
            {text === "View Our Services" && <Icon name="mdi:glass-cocktail" class="w-5 h-5" />}
            {text === "Contact Us" && <Icon name="mdi:message" class="w-5 h-5" />}
            {text}
          </a>
        ))}
      </div>

      <div class="mt-16 relative">
        <div class="absolute inset-0 flex items-center justify-center animate-ping opacity-75">
          <Icon name="mdi:glass-cocktail" class="w-16 h-16 text-accent" />
        </div>
        <Icon name="mdi:glass-cocktail" class="w-16 h-16 mx-auto text-accent relative" />
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes shake {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-5deg); }
    75% { transform: rotate(5deg); }
  }

  .animate-shake {
    animation: shake 1s infinite;
  }
</style>